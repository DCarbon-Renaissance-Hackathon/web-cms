{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "singularName": "blog-post",
    "pluralName": "blog-posts",
    "displayName": "blog_post"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "summary": {
      "type": "text"
    },
    "body": {
      "type": "richtext"
    },
    "thumbnail": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "position": {
      "type": "enumeration",
      "enum": [
        "left",
        "center",
        "right"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    }
  }
}
